{
  "coc.preferences.extensionUpdateCheck":"daily",

  "languageserver": {
      "svls": {
          "command": "svls",
          "filetypes": ["systemverilog"]
      }
  },

	"explorer.width": 38,
	"explorer.quitOnOpen": true,
	"explorer.sources": [
		{
			"name": "buffer",
			"expand": false
		},
		{
			"name": "file",
			"expand": true
		}
	],

  "explorer.icon.customIcons":{
    "icons":{
    "verilog":{
      "code":"\ue625",
      "color":"#ff3366"
    },
    "systemverilog":{
      "code":"\ue625",
      "color":"#ff3366"
    }
    },
    "extensions":{
      "v":"verilog",
      "sv":"systemverilog"
    },
    "filenames":{},
     "dirnames":{},
     "patternMatches":{},
     "dirPatternMatches":{}
  },
  "explorer.keyMappings.global":
  {
    "i": false, // cancel default mapkey

    "*": "toggleSelection",
    "<tab>": "actionMenu",

    "gk": "expandablePrev",
    "gj": "expandableNext",
    "h": "collapse",
    "l": ["expandable?", "expand", "open"],
    "J": ["toggleSelection", "normal:j"],
    "K": ["toggleSelection", "normal:k"],
    "gl": "expand:recursive",
    "gh": "collapse:recursive",
    "<2-LeftMouse>": [
      "expandable?",
      ["expanded?", "collapse", "expand"],
      "open"
    ],
    "o": ["expanded?", "collapse", "expand"],
    "<cr>": ["expandable?", "cd", "open"],
    "e": "open",
    "s": "open:split",
    "E": "open:vsplit",
    "t": "open:tab",
    "<bs>": "gotoParent",
    "gs": "reveal:select",
    "gp": "preview:labeling",

    "y": "copyFilepath",
    "Y": "copyFilename",
    "c": "copyFile",
    "x": "cutFile",
    "p": "pasteFile",
    "d": "delete",
    "D": "deleteForever",

    "a": "addFile",
    "A": "addDirectory",
    "r": "rename",

    ".": "toggleHidden",
    "R": "refresh",

    "?": "help",
    "q": "quit",
    "<esc>": "esc",
    "X": "systemExecute",
    "gd": "listDrive",

    "f": "search",
    "F": "searchRecursive",

    "gf": "gotoSource:file",
    "gb": "gotoSource:buffer",

    "[[": "sourcePrev",
    "]]": "sourceNext",

    "[i": "indentPrev",
    "]i": "indentNext",

    "[m": "indexPrev:modified",
    "]m": "indexNext:modified",

    "[d": "indexPrev:diagnosticError:diagnosticWarning",
    "]d": "indexNext:diagnosticError:diagnosticWarning",
    "[D": "indexPrev:diagnosticError",
    "]D": "indexNext:diagnosticError",

    "[c": "indexPrev:git",
    "]c": "indexNext:git",
    "<<": "gitStage",
    ">>": "gitUnstage"
  },
  "explorer.file.column.indent.indentLine": true,
	"explorer.file.showHiddenFiles": true,
	"explorer.icon.enableNerdfont": true,
	"explorer.keyMappingMode": "none",
	"explorer.buffer.showHiddenBuffers": false,

  "clangd.path": "C:\\Users\\TY\\AppData\\Local\\coc\\extensions\\coc-clangd-data\\install\\11.0.0\\clangd_11.0.0\\bin\\clangd.exe"
}
